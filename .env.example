# Environment Variables Template

# Copy this to your .env file and fill in the values

# ==================== Database ====================
DATABASE_URL=postgresql+asyncpg://postgres:password@db.xxxxx.supabase.co:5432/postgres

# ==================== Supabase ====================
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# ==================== JWT ====================
JWT_SECRET=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_AUDIENCE=authenticated

# ==================== Storage ====================
STORAGE_BUCKET=user-media
MAX_FILE_SIZE=52428800
ALLOWED_VIDEO_TYPES=video/mp4,video/quicktime
ALLOWED_AUDIO_TYPES=audio/mpeg,audio/mp3,audio/wav

# ==================== OAuth (Optional) ====================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ==================== Content Moderation ====================
ENABLE_MODERATION=true
MODERATION_PROVIDER=openai

# ==================== AI Services ====================
AI_PROVIDER=openai
OPENAI_API_KEY=your-openai-key
GEMINI_API_KEY=your-gemini-key
DEEPSEEK_API_KEY=your-deepseek-key

# ==================== Credits & Pricing (ZAR) ====================
CREDIT_COST_MESSAGE_UNMATCHED=10
CREDIT_COST_SUPER_LIKE=5
CREDIT_COST_VIEW_LIKERS=20
CREDIT_COST_BOOST=15

# ==================== Premium Pricing (ZAR) ====================
PREMIUM_PRICE_MONTHLY=99.99
PREMIUM_PRICE_YEARLY=999.99

# ==================== Ozow Payment Gateway (Next.js Web) ====================
# Sign up at: https://www.ozow.com/
OZOW_SITE_CODE=your-site-code
OZOW_PRIVATE_KEY=your-private-key
OZOW_API_KEY=your-api-key
OZOW_TEST_MODE=true

# ==================== Google Play IAP (Flutter Android) ====================
# Setup: https://developer.android.com/google/play/billing
GOOGLE_PLAY_PACKAGE_NAME=com.yourapp.dating
GOOGLE_PLAY_SERVICE_ACCOUNT_FILE=/path/to/service-account.json

# ==================== Apple IAP (Flutter iOS) ====================
# Setup: https://developer.apple.com/app-store-connect/
APPLE_SHARED_SECRET=your-shared-secret
APPLE_BUNDLE_ID=com.yourapp.dating
